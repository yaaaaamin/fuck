def PurchaseModule():
    while True:
        op = PurchaseMenu()
        if op == "B":
            BusinessClass()
        elif op == "E":
            EconomyClass()
        elif op == "M":
            MainMenu()
        else:
            Print("Invalid Option")


#
while True:
    mm = MainMenu()
    if mm == "P":
        pm = PurchaseMenu()
        if pm == "B":
            BusinessClass()
            break
        elif pm == "E":
            EconomyClass()
            break
        elif pm == "M":
            MainMenu()
            break
        else:
            print("Please enter a valid option")
            PurchaseMenu()
            break
